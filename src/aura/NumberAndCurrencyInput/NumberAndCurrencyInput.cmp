<aura:component controller="InformationInputCtr">
    <!-- Start attribute -->
    <aura:attribute name="QnaireId" type="String" />
    <aura:attribute name="QnaireName" type="String" />
    <aura:attribute name="QuestnQnaireId" type="String" />
    <aura:attribute name="QuestnGroupId" type="String" />
    <aura:attribute name="Questntype" type="String" />
    <aura:attribute name="isEditQue" type="Boolean" />
    <aura:attribute name="modalHeader" type="String" />
    <aura:attribute name="fieldType" type="String" />
    <aura:attribute name="dropColNumber" type="String" />
    <aura:attribute name="isShowHelpText" type="Boolean" default="false" />
    <aura:attribute name="isShowCurrency" type="Boolean" default="false" />
    <aura:attribute name="lstQuesCategory" type="List" default="[]" />
    <aura:attribute name="objCrteQues" type="Question__c" default="{ 'sobjectType': 'Question__c'}" />
    <aura:attribute name="description" type="String" default=" " />
    <aura:attribute name="objeditQues" type="Question__c" default="{ 'sobjectType': 'Question__c'}" />
    <aura:attribute name="lstQuesCurrenctSymbol" type="List" default="[]" />
    <!-- End attribute-->
    <!-- event handlers -->
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"></aura:handler>
    <!-- event handlers -->
    <!--Start body-->
    <div class="modal-container hideModalCSS" aura:id="datecmodalontainer">
        <section role="dialog" id="text-plain-popup" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-modal_large slds-fade-in-open slds-slide-down-cancel">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close" onclick="{!c.hideModal}" class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" />
                    <h3 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate ">
                        <strong>Question Editor : {!v.modalHeader}</strong></h3>
                </header>
                <aura:if isTrue="{!v.isEditQue==false}">
                    <div class="slds-modal__content slds-p-around_medium " id="modal-content-id-1">
                        <fieldset class="slds-form-element" style="min-width: 100%;">
                            
                            <div class="slds-form-element ">
                                <label class="slds-form-element__label" for="select-01">Question Text</label>
                                <div class="demo-only" >
                                    <lightning:inputRichText onblur="{!c.checkTextLenght}" messageWhenBadInput="write your question" aura:id="qustNameRich" placeholder="Compose text..." value="{!v.objCrteQues.GKN_FB__Label__c}" />
                                </div>
                            </div>
                            <div class="slds-form-element slds-m-top_small">
                                <aura:if isTrue="{!v.fieldType!='Information'}">
                                    <div class="slds-form-element">
                                        <lightning:input type="checkbox" label="Help Text" name="helptext" checked="{!v.objCrteQues.GKN_FB__Help_Text_Required__c}" />
                                    </div>
                                    <aura:if isTrue="{!v.objCrteQues.GKN_FB__Help_Text_Required__c==true}">
                                        <div class="slds-form-element slds-m-bottom_x-small slds-m-top_x-small qf-remove-label ">
                                            <lightning:input aura:id="helpTextInp" label=" " placeholder="Help Text" name="Help Text" value="{!v.objCrteQues.GKN_FB__Help_Text__c}" maxlength="255" minlength="0" />
                                        </div>
                                    </aura:if>
                                </aura:if>
                            </div>
                            
                            <div class="slds-grid slds-gutters slds-float_left slds-left_none slds-m-bottom_small">
                                <div class="slds-col ">
                                    <aura:if isTrue="{!v.fieldType!='Information'}">
                                        <div class="slds-file-selector slds-file-selector_files slds-clearfix  slds-m-top_x-small">
                                            <div class="slds-form-element">
                                                <lightning:input type="checkbox" label="Required" name="reimbursed" checked="{!v.objCrteQues.Required__c}" />
                                            </div>
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    
                                    <aura:if isTrue="{!v.fieldType!='Information'}">
                                        <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                            <lightning:input type="checkbox" label="Allow Comment" name="Comment" checked="{!v.objCrteQues.GKN_FB__Allow_Comment__c}" />
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    <aura:if isTrue="{!and(v.fieldType !='Phone',v.fieldType!='Information')}">
                                        <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                            <lightning:input type="checkbox" label="Allow Attachments" name="Upload file" checked="{!v.objCrteQues.GKN_FB__Allow_Attachments__c}" />
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    <aura:if isTrue="{!and(v.fieldType !='Phone',v.fieldType!='Information')}">
                                        <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                            <lightning:input aura:id="currencyCheckbox" type="checkbox" label="Currency" onchange="{!c.showCurrency}" name="currencyCheckbox" checked="{!v.objCrteQues.GKN_FB__Allow_Currency__c}" />
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    <aura:if isTrue="{!v.objCrteQues.GKN_FB__Allow_Currency__c==true}">
                                        <div>
                                            <lightning:select aura:id="CurrencyId" name="selectcurrency" value="{!v.objCrteQues.GKN_FB__Currency_Symbol__c}" label="" variant="label-hidden">
                                                <option value="">select currency</option>
                                                <aura:iteration items="{!v.lstQuesCurrenctSymbol}" var="symbol">
                                                    <option value="{!symbol}" selected="{!symbol==v.objCrteQues.GKN_FB__Currency_Symbol__c? true :false}">{!symbol}</option>
                                                </aura:iteration>
                                            </lightning:select>
                                        </div>
                                    </aura:if>
                                </div>
                            </div>
                            <div class="slds-grid slds-gutters slds-float_left slds-left_none qa-allow-box slds-clearfix">
                                <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                    <lightning:select name="selectDecimalPoint" label="Allow Decimal Point" value="{!v.objCrteQues.GKN_FB__Decimal_value__c}">
                                        <option value="0">0</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                    </lightning:select>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </aura:if>
                <aura:if isTrue="{!v.isEditQue==true}">
                    <div class="slds-modal__content slds-p-around_medium " id="modal-content-id-1">
                        <fieldset class="slds-form-element" style="min-width: 100%;">
                            
                            <div class="slds-form-element ">
                                <label class="slds-form-element__label" for="select-01">Question Text</label>
                                <div class="demo-only" >
                                    <lightning:inputRichText onblur="{!c.checkTextLenght}" disabledCategories="" aura:id="qustNameRich" placeholder="Compose text..." value="{!v.description}" />
                                </div>
                            </div>
                            <div class="slds-form-element slds-m-top_small">
                                <aura:if isTrue="{!v.fieldType!='Information'}">
                                    <div class="slds-form-element">
                                        <lightning:input type="checkbox" label="Help Text" name="helptext" checked="{!v.objeditQues.GKN_FB__Help_Text_Required__c}" />
                                    </div>
                                    <aura:if isTrue="{!v.objeditQues.GKN_FB__Help_Text_Required__c==true}">
                                        <div class="slds-form-element slds-m-bottom_x-small slds-m-top_x-small qf-remove-label ">
                                            <lightning:input aura:id="helpTextInp" label=" " placeholder="Help Text" name="Help Text" value="{!v.objeditQues.GKN_FB__Help_Text__c}" maxlength="255" minlength="0" />
                                        </div>
                                    </aura:if>
                                </aura:if>
                            </div>
                            <div class="slds-grid slds-gutters slds-float_left slds-left_none slds-m-bottom_small">
                                <div class="slds-col ">
                                    <aura:if isTrue="{!v.fieldType!='Information'}">
                                        <div class="slds-file-selector slds-file-selector_files slds-clearfix  slds-m-top_x-small">
                                            <div class="slds-form-element">
                                                <lightning:input type="checkbox" label="Required" name="reimbursed" checked="{!v.objeditQues.GKN_FB__Required__c}" />
                                            </div>
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    <aura:if isTrue="{!v.fieldType!='Information'}">
                                        <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                            <lightning:input type="checkbox" label="Allow Comment" name="Comment" checked="{!v.objeditQues.GKN_FB__Allow_Comment__c}" />
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    <aura:if isTrue="{!and(v.fieldType !='Phone',v.fieldType!='Information')}">
                                        <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                            <lightning:input type="checkbox" label="Allow Attachments" name="Upload file" checked="{!v.objeditQues.GKN_FB__Allow_Attachments__c}" />
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    <aura:if isTrue="{!and(v.fieldType !='Phone',v.fieldType!='Information')}">
                                        <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                            <lightning:input aura:id="currencyCheckbox" type="checkbox" label="Currency" onchange="{!c.showCurrency}" name="currencyCheckbox" checked="{!v.objeditQues.GKN_FB__Allow_Currency__c}" />
                                        </div>
                                    </aura:if>
                                </div>
                                <div class="slds-col ">
                                    <aura:if isTrue="{!v.objeditQues.GKN_FB__Allow_Currency__c==true}">
                                        <div>
                                            <lightning:select aura:id="CurrencyId" name="selectcurrency" value="{!v.objeditQues.GKN_FB__Currency_Symbol__c}" label="" variant="label-hidden">
                                                <option value="">select currency</option>
                                                <aura:iteration items="{!v.lstQuesCurrenctSymbol}" var="symbol">
                                                    <option value="{!symbol}" selected="{!symbol==v.objeditQues.GKN_FB__Currency_Symbol__c? true :false}">{!symbol}</option>
                                                </aura:iteration>
                                            </lightning:select>
                                        </div>
                                    </aura:if>
                                </div>
                            </div>
                        </fieldset>
                        <div class="slds-grid slds-gutters slds-float_left slds-left_none qa-allow-box slds-clearfix">
                            <div class="slds-form-element slds-m-top_x-small slds-m-left_small">
                                <lightning:select name="selectDecimalPoint" label="Allow Decimal Point" value="{!v.objeditQues.GKN_FB__Decimal_value__c}">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </lightning:select>
                            </div>
                        </div>
                    </div>
                </aura:if>
                <footer class="slds-modal__footer">
                    <lightning:button label="Cancel" onclick="{!c.hideModal}" />
                    <aura:if isTrue="{!v.isEditQue==false}">
                        <lightning:button variant="brand" label="Save" onclick="{!c.saveQues}" />
                    </aura:if>
                    <aura:if isTrue="{!v.isEditQue==true}">
                        <lightning:button variant="brand" label="Save" onclick="{!c.saveEditQuesrecord}" />
                    </aura:if>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop  slds-backdrop_open" id="slds-backdrop"></div>
    </div>
    <!--end body-->
</aura:component>